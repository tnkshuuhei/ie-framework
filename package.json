{
  "name": "ScaffoldIE",
  "description": "A set of smart contracts for Impact Evaluator",
  "version": "1.0.0",
  "author": {
    "name": "Shuhei Tanaka",
    "url": "https://github.com/tnkshuuhei"
  },
  "keywords": [
    "hardhat",
    "foundry",
    "smart contract",
    "ethereum",
    "solidity",
    "blockchain",
    "impact-evaluator"
  ],
  "private": true,
  "license": "MIT",
  "dependencies": {
    "ethers": "^5.7.2",
    "csv-parser": "^3.0.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-foundry": "^1.1.3",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "hardhat": "^2.22.18"
  },
  "scripts": {
    "setup": "pnpm install && forge install && cp .env.example .env",
    "clean": "rm -rf cache out",
    "build": "forge clean && forge build",
    "test": "forge clean && forge test ",
    "coverage": "forge clean && forge coverage",
    "test:sepolia": "forge clean && forge test --rpc-url https://sepolia.drpc.org",
    "deploy:sepolia": "forge clean && forge script script/Deploy.s.sol:Deploy --rpc-url https://sepolia.drpc.org --broadcast --etherscan-api-key sepolia --verify",
    "mock:sepolia": "forge clean && forge script script/Mock.s.sol:MockScript --rpc-url https://sepolia.drpc.org --broadcast"
  }
}
